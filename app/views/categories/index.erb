<div class="center">
<h6>Your personal rituals for well-being</h6>
<br>
<br>
<% @categories.each do |c| %>
<h2><%= c.name %></h2>
<br>
<% c.rituals.each do |r| %>
<% if current_user.rituals.include?(r)%>
<h3><%= r.title %></h3>
<h5><%= r.description %></h5>
<br> 
<br>
<br>
  <form action="/rituals/<%= r.id %>/delete" method="post">
    <input type="hidden" name="_method" value="delete">
    <input class="submit" type="submit" value="Delete This Ritual">
  </form>
  <br>
  <button class ="btn-nice"><a class="text-my-own-color" href="/rituals/<%= r.id %>/edit">Edit this ritual</a></button>
  <button class ="btn-nice"><a class="text-my-own-color" href="/rituals/<%= r.id %>">View this ritual</a></button>
<br>
<br>
<br>
<br>
<% end%>
<% end%>

<button class ="btn-nice"><a class="text-my-own-color" href="/categories/<%= c.id %>">View all rituals in this category</a></button> 
<br>
<br>
<% end%>
<br>
<br>
</div>
<button class ="btn-cool"><a class="text-my-own-color" href="/rituals/new">Create a new ritual</a></button>


