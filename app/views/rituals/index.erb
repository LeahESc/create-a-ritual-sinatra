<h2>Your well-being rituals</h2>

<% @rituals.each do |r| %>
<h3><%= r.title %></h3>
<p><%= r.description %></p>
<button class ="btn-nice"><a href="/rituals/<%= r.id %>/edit">Edit this ritual</a></button>
<button class ="btn-nice"><a href="/rituals/<%= r.id %>/delete">Delete this ritual</a></button>
<hr>
<% end%>

<a href="/rituals/new">Add a new ritual</a>
