<div class="center">
<h2>Edit Ritual</h2>
<form method="POST" action="/rituals/<%=@ritual.id%>">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="title">Title:</label>
    <input type="text" name="title" value="<%= @ritual.title %>">
    <br>
    <label for="content">Description:</label>
    <textarea name="description" rows="2" cols="20" value="<%=@ritual.description%>"><%=@ritual.description%></textarea>
    <input type="submit" value="submit">
</form>
</div>